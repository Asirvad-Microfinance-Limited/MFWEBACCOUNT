@{
    ViewData["Title"] = "FZM_newSiteConfirm";
    Layout = "~/Views/Shared/_MFMainLayout.cshtml";
}


<style type="text/css">
    .nb {
        height: 100%;
        width: 100%;
        /*overflow-x: scroll;
            overflow-y: scroll;*/
        overflow-x: auto;
        overflow-y: auto
        /*background-color: powderblue;*/
    }

    .north {
        transform: rotate(0deg);
        -ms-transform: rotate(0deg); /* IE 9 */
        -webkit-transform: rotate(0deg); /* Safari and Chrome */
    }

    .west {
        transform: rotate(90deg);
        -ms-transform: rotate(90deg); /* IE 9 */
        -webkit-transform: rotate(90deg); /* Safari and Chrome */
    }

    .south {
        transform: rotate(180deg);
        -ms-transform: rotate(180deg); /* IE 9 */
        -webkit-transform: rotate(180deg); /* Safari and Chrome */
    }

    .east {
        transform: rotate(270deg);
        -ms-transform: rotate(270deg); /* IE 9 */
        -webkit-transform: rotate(270deg); /* Safari and Chrome */
    }


    figure.containerZoom {
        background-position: 50% 50%;
        position: relative;
        width: 100%;
        overflow: hidden;
        cursor: zoom-in;
        margin: 0;
    }

        figure.containerZoom img {
            transition: opacity .5s;
            display: block;
            width: 100%;
        }

        figure.containerZoom.active img {
            opacity: 0;
        }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header"><strong>NEW SITE CONFIRMATION</strong></div>
            <div class="card-body card-block">
                <form name="frmApproveIndent" id="frmApproveIndent" method="post">

                    <div class="row form-group">



                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <label for="cc-payment" class="control-label mb-1">Select Site<b style="color:red">*</b></label>
                                <select name="ddlsite" id="ddlsite" class="form-control">
                                    <option value="0">--Select Site--</option>
                                </select>
                            </div>
                        </div>

                       

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Square Feet</label>
                                <input type="text" id="TxtSquarefeet" name="Square feet" class="form-control" placeholder="Square Feet" maxlength="10" disabled="disabled">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>


                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Monthly Rent</label>
                                <input type="text" id="TxtMonthlyrent" name="Monthly rent" class="form-control" placeholder="Monthly rent" maxlength="10" disabled="disabled">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>


                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Advance Amount</label>
                                <input type="text" id="TxtAdvAmt" name="Advance Amount" class="form-control" placeholder="Advance Amount" maxlength="10" disabled="disabled">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>


                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Distance From Main Road( KM)</label>
                                <input type="text" id="TxtDistance" name="Distance From Main Road( KM)" class="form-control" placeholder="Distance From Main Road( KM)" maxlength="10" disabled="disabled">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>


                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">*Attach MS 95<b style="color:red">*</b></label>
                                <input type="file" id="imgUpload" name="*Attach MS 95" class="form-control">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>

                        </div>


                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Average Rent(State wise)</label>
                                <input type="text" id="TxtAvgRentState" name="Average Rent" class="form-control" placeholder="Average Rent(State wise)" disabled="disabled">
                                <input type="hidden" id="type_id" >

                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>

                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Average Rent(District wise)</label>
                                <input type="text" id="TxtAvgRentdistrict" name="Average Rent" class="form-control" placeholder="Average Rent(District wise)" disabled="disabled">
                                @*   <label id="deliveryAddress-error" class="error" for="deliveryAddress"></label> *@

                            </div>

                        </div>

                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group">

                                <label for="cc-payment" class="control-label mb-1">Verify Photo<b style="color:red">*</b></label>
                                <div>
                                    <label class="radio-inline mr-3">
                                        <input type="radio" name="VerifyPhoto" id ="verify_yes" value="Yes"> Yes
                                    </label>

                                    <label class="radio-inline">
                                        <input type="radio" name="VerifyPhoto" id="verify_no" value="No"> No
                                    </label>
                                </div>

                            </div>

                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group" style="padding-top:10px;">
                                <button type="button" class="btn btn-secondary btn-custom" id="BtnViewPhoto">VIEW PHOTO</button>

                            </div>
                         </div>

                        <div class="modal fade" id="ImageModel" tabindex="-1" role="dialog" aria-labelledby="Modal1" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="largeModalLabel">Image</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="FnClose()">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-md-12" id="ImageDiv" style="text-align:center;">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <div align="center" class="col-lg-12">
                                            <button type="button" id="rtt" data-dismiss="modal" aria-label="Close" class="btn btn-primary" onclick="FnClose()"><i class="fa fa-close"></i>&nbsp;Close</button>
                                            &nbsp;&nbsp;
                                            <button type="button" id="rotate" aria-label="rotate" onclick="" class="btn btn-primary">Rotate</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        


                    </div>


                </form>

                <div class="text-right" id="confirmbutton">
                    <div class="text-right" style="padding: 10px">
                        <button type="button" class="btn btn-success action-btn" id="BtnApprove">APPROVE</button>
                        <button type="button" class="btn btn-danger action-btn" id="btnReject">REJECT</button>
                        <button type="button" class="btn btn-danger action-btn" id="btn_exit">EXIT</button>


                    </div>
                </div>

            </div>

        </div>

    </div>
</div>
<style>
    .action-btn {
        width: 85px;
        margin-left: 3px;
    }

    .btn-custom {
        background-color: #dee2e6;
        color: #000;
        border: 1px solid #ccc;
    }
</style>

@section Scripts {

    <script src="~/clientapp/siteconfirmation/FZM_site_confirmation.js"></script>
    <script src="~/js/image-zoom.js"></script>
}

